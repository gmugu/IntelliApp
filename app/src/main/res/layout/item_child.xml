<?xml version="1.0" encoding="utf-8"?><FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content">    <TextView        android:id="@+id/view_line"        android:layout_width="0.5dp"        android:layout_height="match_parent"        android:layout_marginLeft="52dp"        android:background="#999999" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="65dp"        android:orientation="vertical"        android:paddingBottom="5dp">        <TextView            android:id="@+id/tv_title"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:padding="5dp"            android:singleLine="true"            android:textStyle="bold"            android:text="标题"            android:textColor="#5a5a5a"            android:textSize="13sp" />        <TextView            android:id="@+id/tv_content"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:padding="5dp"            android:singleLine="true"            android:text="内容"            android:textColor="#999999"            android:textSize="13sp" />    </LinearLayout></FrameLayout>